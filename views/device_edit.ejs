<% include layouts/header.ejs %>
<title>Profile</title>
<script>
      document.getElementById("title").innerHTML= "Profile";
</script>

<div class="row">
      <div class="col-md-12 p-2">
            <form class="form-horizontal form-material" method="POST" action="/editDevice">
                  <div class="form-group">
                      <label class="col-md-12">Device ID</label>
                      <div class="col-md-12">
                          <input type="text" name="device_id" value="<%- device_id %>"
                              class="form-control form-control-line" readonly> </div>
                  </div>
                  <div class="form-group">
                      <label for="example-email" class="col-md-12">Name</label>
                      <div class="col-md-12">
                          <input type="text" name="device_name" placeholder="Name"
                              class="form-control form-control-line" name="example-email"
                              id="example-email"> </div>
                  </div>
                  <div class="form-group">
                    <div class="col-sm-12">
                        <button class="btn btn-success">Update</button>
                    </div>
                </div>
            </form>
      </div>
</div>
<% include layouts/footer.ejs %>